<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-12">
      <%= form.label :gruppo_utente %>
      <%= form.select :user_group_id, options_for_select(@options_for_user_group, user.user_group.id), {}, class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-lg-12">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-lg-12">
      <%= form.label :nome %>
      <%= form.text_field :firstname, class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-lg-12">
      <%= form.label :cognome %>
      <%= form.text_field :lastname, class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-lg-12">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-lg-12">
      <%= form.label :conferma_password %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <br/>



  <div class="row">
    <div class="col-lg-12">
      <%= form.submit nil, class: "form-control btn btn-danger" %>
    </div>
  </div>


<% end %>
