<p id="notice"><%= notice %></p>

<h1>Utenti</h1>

<table class="table">
  <thead>
    <tr>
      <th>Gruppo</th>
      <th>Username</th>
      <th>Nome</th>
      <th>Cognome</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_group.name %></td>
        <td><%= user.username %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= link_to 'Modifica', edit_user_path(user) %></td>
        <td><%= link_to 'Elimina', user, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Utente', new_user_path %>
