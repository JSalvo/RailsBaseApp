<p id="notice"><%= notice %></p>

<h1>Gruppi Utente</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
        <td><%= user_group.name %></td>
        <td><%= link_to 'Modifica', edit_user_group_path(user_group) %></td>
        <td><%= link_to 'Elimina', user_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Gruppo Utente', new_user_group_path %>
