<!DOCTYPE html>
<html>
  <head>
    <title>RailsBaseApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="container">

        <%= render "layouts/jnavbar" %>

        <%= notice %> <br/>

        <% if notice %>
          <script>
            $( function()
            {
              $( "#dialog" ).dialog();
            });
          </script>
        <% end %>

        <table style="width:100%; margin-top:30px;">

                  <tr>

                            <td style="text-align:left;">

                                      <%= link_to "Index", www_index_path %>
                            </td>
                            <td style="text-align:right;">
                              <% if @logged_user %>
                                Login eseguito come:<br/>
                                <%= "#{@logged_user.firstname} #{@logged_user.lastname}" %>
                                <%= fa_icon "camera-retro" %>
                              <% end %><br/>
                            </td>

                  </tr>
        </table>

        <br/>
        <br/>

        <%= yield %>
        <% if @dialog %>
              <div id="dialog" title="Basic dialog">
                <p>Login effettuato con successo!</p>
              </div>
        <% end %>

        </div>
  </body>
</html>
